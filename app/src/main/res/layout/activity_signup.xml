<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sign_up_background">

    <!-- 이름 -->
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="190dp"
        android:src="@drawable/sign_up_name_box" />

    <EditText
        android:id="@+id/Sign_up_name"
        android:layout_width="200dp"
        android:layout_height="38dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="88dp"
        android:layout_marginTop="213dp"
        android:layout_marginEnd="91dp"
        android:background="@null"
        android:hint="이름"
        android:inputType="textShortMessage"
        android:privateImeOptions="defaultInput-mode=korean"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColorHighlight="@color/gray"
        android:textSize="14sp" />

    <!-- 이메일 -->
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="265dp"
        android:layout_marginEnd="81dp"
        android:src="@drawable/sign_up_email_box" />

    <EditText
        android:id="@+id/Sign_up_email"
        android:layout_width="200dp"
        android:layout_height="38dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="90dp"
        android:layout_marginTop="289dp"
        android:layout_marginEnd="89dp"
        android:background="@null"
        android:hint="이메일"
        android:inputType="textEmailAddress"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColorHighlight="@color/gray"
        android:textSize="14sp" />

    <!-- 비밀번호 -->
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="340dp"
        android:layout_marginBottom="272dp"
        android:src="@drawable/sign_up_pw_box" />

    <EditText
        android:id="@+id/Sign_up_pw"
        android:layout_width="200dp"
        android:layout_height="38dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="90dp"
        android:layout_marginTop="369dp"
        android:layout_marginEnd="89dp"
        android:background="@null"
        android:hint="비밀번호"
        android:inputType="textPassword"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColorHighlight="@color/gray"
        android:textSize="14sp" />

    <!-- 비밀번호 확인 -->
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="415dp"
        android:layout_marginBottom="191dp"
        android:src="@drawable/sign_up_pw_check_box" />

    <EditText
        android:id="@+id/Sign_up_chkPw"
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="88dp"
        android:layout_marginTop="447dp"
        android:layout_marginEnd="91dp"
        android:background="@null"
        android:hint="비밀번호 확인 "
        android:inputType="textPassword"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColorHighlight="@color/gray"
        android:textSize="14sp" />

    <!--가입하기 버튼-->
    <ImageButton
        android:id="@+id/Sign_up_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="140dp"
        android:background="@drawable/sign_up_button" />

</RelativeLayout>